{
  "name": "avantio",
  "version": "1.0.0",
  "description": "Web scraper con Playwright",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register server.ts",
    "dev:watch": "ts-node-dev -r tsconfig-paths/register --respawn server.ts",
    "scrape": "ts-node -r tsconfig-paths/register -r dotenv/config services/scraper/run.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "scraper",
    "playwright",
    "web-scraping"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.19.2",
    "playwright": "^1.56.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
