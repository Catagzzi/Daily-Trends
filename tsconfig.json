{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@appTypes/*": ["./types/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "scripts/**/*",
    "utils/**/*",
    "services/**/*",
    "middlewares/**/*",
    "routes/**/*",
    "controllers/**/*",
    "types/**/*",
    "app.ts",
    "server.ts"
  ],
  "exclude": ["node_modules", "dist", "data", "logs"]
}
